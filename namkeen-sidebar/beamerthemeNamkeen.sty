\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamerthemeNamkeen}[2013/10/01 v1.0 Namkeen Beamer Theme]
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Load required packages
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\RequirePackage{tikz}
\RequirePackage{calc}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Theme options and definitions
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%theme options
\DeclareOptionBeamer{width}{\PassOptionsToPackage{width=#1}{beamerouterthemeNamkeen}}
\DeclareOptionBeamer{hideothersubsections}{\PassOptionsToPackage{hideothersubsections}{beamerouterthemeNamkeen}}
\DeclareOptionBeamer{hideallsubsections}{\PassOptionsToPackage{hideallsubsections}{beamerouterthemeNamkeen}}
\DeclareOptionBeamer{hidetitle}{\PassOptionsToPackage{hidetitle}{beamerouterthemeNamkeen}}
\DeclareOptionBeamer{hideauthor}{\PassOptionsToPackage{hideauthor}{beamerouterthemeNamkeen}}
\DeclareOptionBeamer{hideinstitute}{\PassOptionsToPackage{hideinstitute}{beamerouterthemeNamkeen}}
\DeclareOptionBeamer{shownavsym}{\PassOptionsToPackage{shownavsym}{beamerouterthemeNamkeen}}
\DeclareOptionBeamer{left}{%
  \PassOptionsToPackage{left}{beamerouterthemeNamkeen}%
  \PassOptionsToPackage{left}{beamerinnerthemeNamkeen}%
  }
\DeclareOptionBeamer{right}{%
  \PassOptionsToPackage{right}{beamerouterthemeNamkeen}%
  \PassOptionsToPackage{right}{beamerinnerthemeNamkeen}%
  }
\ProcessOptionsBeamer

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%beamer specific options
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\mode<presentation>%refers to the first four modes (beamer,handout,second and trans). That is, to all modes except the article mode
{
  \useinnertheme{Namkeen}
  \useoutertheme{Namkeen}
  \usecolortheme{Namkeen}
}%end of beamer specific options

\mode<all>
